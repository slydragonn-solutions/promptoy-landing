---
import Header from "./Header.astro";
import Features from "./Features.astro";
import Download from "./Download.astro";
import Footer from "./Footer.astro";
---

<div id="container">
    <Header />
	<main id="welcome">
		<h1>MANAGE YOUR AI PROMPTS</h1>
		<p class="welcome-text">The desktop application for AI prompt management. Create, organize, and optimize your AI prompts, templates, and contexts.</p>
		<img src="/app.png" alt="Promptoy" id="app"/>
	</main>
	<Features />
	<Download />
	<Footer />
</div>

<style>
	#container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 20px;
		gap: 50px;
	}
	#welcome {
		text-align: center;
	}
	.welcome-text {
		max-width: 700px;
		margin: 20px auto;
	}
	#app {
		width: 100%;
		max-width: 1000px;
		margin: 20px auto;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		border-radius: 10px;
		border: 5px solid #000;
	}	
</style>
